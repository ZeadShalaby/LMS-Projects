<br><br>
<div class="container shadow rounded">
    <table class="table table-hover text-center mx-auto ">
        <thead>
            <tr class="table-secondary">
                <th scope="col">#</th>
                <th scope="col">Code</th>
                <th scope="col">Department</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each departments}}
            <tr>
                <th scope="row">#</th>
                <td>{{code}}</td>
                <td>{{name}}</td>
                <td>
                    <a class="link-success" title="edit" href="/admin/departments/{{_id}}/edit">
                        <li class="fa-solid fa-pencil fs-5"></li>
                    </a>
                </td>
                <td>
                    <form onsubmit="return confirm('Are you sure you want to delete this Department')"
                        action="/admin/departments/{{_id}}?_method=DELETE" method="post">
                        <button class="border-0 bg-transparent text-danger" title="delete">
                            <li class="fa-regular fa-trash-can fs-5"></li>
                        </button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>